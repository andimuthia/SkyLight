<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@drawable/navbar">

    <RelativeLayout
        android:id="@+id/rl_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/menu_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/plane_24"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/menu_home"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/menu_explore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/world_24"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/menu_explore"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/menu_simpan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bookmark_24"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/menu_simpan"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/menu_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_24"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/menu_profile"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>